<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
    <%= form_for :search, class: "form-inline" do |f| %>
      <div class="form-group">
        <%= f.label :phrase %>
        <%= f.text_field :phrase, class: "form-control" %>
      </div>

      <%#= f.submit 'Submit', class: "btn btn-info" %>
    <% end %>

    <%= link_to 'Clear Analytic', '', class: 'btn btn-warning', id: :clear_analytic %>
  </div>
  <div class="col-lg-3 col-md-3">
    Word Library: <span style="font-weight: 400; font-size: 10px"><%= ENV['WORD_LIBRARY'].split(' ').uniq.sort.join(', ') %></span>
  </div>
</div>

<div id="analytic_table" style="margin-top: 20px">
  <%= render '/application/analytic_table' %>
</div>
